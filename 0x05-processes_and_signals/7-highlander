#!/usr/bin/env bash
# Infinite loop script that handles SIGTERM and can be killed with SIGKILL

# Function to handle SIGTERM
handle_sigterm() {
    echo "I am invincible!!!"
}

# Trap SIGTERM signal
trap handle_sigterm SIGTERM

# Infinite loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done
